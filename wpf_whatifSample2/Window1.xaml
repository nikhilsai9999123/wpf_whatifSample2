<fa:ImageAwesome Icon="Refresh" Spin="True" HorizontalAlignment="Center"  Height="48" Width="48" Margin="0,0,10,0" />
</InlineUIContainer><Run Text=" Loading Please wait..."/></TextBlock>

        </Grid>
    </Border>
</Window>